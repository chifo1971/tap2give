<navigation
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/nav_graph"
app:startDestination="@id/mainFragment" >
<fragment
    android:id="@+id/mainFragment"
    android:name="com.mosque.taptogive.MainActivity"
    android:label="@string/app_name"
    tools:layout="@layout/activity_main" >

    <action
        android:id="@+id/action_main_to_payment"
        app:destination="@id/paymentFragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right" />

</fragment>
<fragment
    android:id="@+id/paymentFragment"
    android:name="com.mosque.taptogive.PaymentActivity"
    android:label="@string/payment_title"
    tools:layout="@layout/activity_payment" >

    <argument
        android:name="donation_amount"
        android:defaultValue="0.0"
        app:argType="float" />

    <action
        android:id="@+id/action_payment_to_main"
        app:destination="@id/mainFragment"
        app:popUpTo="@id/mainFragment"
        app:popUpToInclusive="true" />

</fragment>
</navigation>